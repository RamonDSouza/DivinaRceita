<div class="fields">

  <div>
    <h3>Nome de chef</h3>
    <div>
      <input type="text" name="apelido" value="{{vip.apelido}}" placeholder="Digite seu apelido ou nome" required="required">
    </div>
  </div>

   <div>
  <h3>Anos de experiência</h3>
    <div>
      <input type="text" name="anos_exp"value="{{vip.anos_exp}}"  placeholder="Anos de experiência">
    </div>
  </div>

    <div>
    <h3>Sobre você</h3>
    <div>
      <input type="text" name="about_you" value="{{vip.about_you}}" placeholder="Fale algo sobre você">
    </div>
  </div>

    <div>
    <h3>Linkedin</h3>
    <div>
      <input type="text" name="facebook" value="{{vip.facebook}}" placeholder="Ex: https://www.facebook.com/divinaReceita">
    </div>
   </div>
    <div>
    <h3>Instagram</h3>
    <div>
      <input type="text" name="instagram" value="{{vip.instagram}}" placeholder="Ex: @DivinaReceita">
    </div>
    </div>

      <div>
        <h3>E-mail</h3>
        <div>
          <input type="email" name="email" value="{{vip.email}}" onblur="Validate.apply(this, 'isEmail')" placeholder="Digite seu e-mail para recuperar sua senha" required="required">
        </div> 
      </div>

<div>
  <h3>Sua Foto</h3>
  <div class="upload_gallery">
    <div  class="photos_upload">
      <input class="photos_input" type="file" multiple="multiple" name="images" accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
      <i class="material-icons">add</i>
    </div>
    <div class="photos_preview">
      {% if files %}
        {% for image in files %}
          <div class="photo" id="{{image.file_id}}">
            <img src="{{image.src}}" alt="{{image.name}}">
            <i class="material-icons" onclick="PhotosUpload.removeOldImage(event)">close</i>
          </div>
        {% endfor %}
        <input type="hidden" name="removed_files">
      {% endif %}
    </div>
  </div>
</div>

